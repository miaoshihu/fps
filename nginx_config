http {
    include       mime.types;
    default_type  application/octet-stream;

    client_max_body_size 100m;

    #log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
    #                  '$status $body_bytes_sent "$http_referer" '
    #                  '"$http_user_agent" "$http_x_forwarded_for"';

    upstream frontends {
        server 127.0.0.1:8066 max_fails=5 fail_timeout=60s;
    }
    #access_log  logs/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  1659;

    #gzip  on;

    # another virtual host using mix of IP-, name-, and port-based configuration
    #
    server {
        listen       81;
    #    listen       somename:8080;
    #    server_name  somename  alias  another.alias;
        server_name   shuxiaosheng.top;


        location /aa/ {
            # root   html;
            # index  index.html index.htm;
            root /home/admin/html;
            index hello_miao.html;
        }
        location /friend/ {
            root /home/admin/html/;
            index friend.html;
        }

        location /django/ { 
                # include uwsgi_params;
                # uwsgi_pass 8091;
                # uwsgi_read_timeout 2;
        }

        location /upload2/ {
            upload_pass @none;
            upload_store /home/admin/fps/static;
            upload_store_access all:rw;
        }

        location /static/ {
            root /home/admin/fps/;
        }
        location / {
                # uwsgi_pass 8066;
                # test for tornado
                #
                proxy_pass_header Server;
                proxy_set_header Host $http_host;
                proxy_redirect off;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Scheme $scheme;
                proxy_pass http://frontends;
        }

        location @none {
        }
    }


    # HTTPS server
    
    server {
        listen       443 ssl;
        # listen 80 ssl;
        server_name  shuxiaosheng.top;

        ssl_certificate      /home/admin/sig/1_shuxiaosheng.top_bundle.crt;
        ssl_certificate_key  /home/admin/sig/2_shuxiaosheng.top.key;

        ssl_session_cache    shared:SSL:1m;
        ssl_session_timeout  105m;

        ssl_ciphers  HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers  on;

        client_max_body_size      20m;
        client_body_buffer_size  512k;


        location / {
            #root   html;
            #index  index.html index.htm;
            proxy_pass_header Server;
            proxy_set_header Host $http_host;
            proxy_redirect off;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Scheme $scheme;
            proxy_pass http://frontends;
        }

        location /upload {
                upload_pass @python;
                upload_store /home/admin/fps/static;
                #upload_store /tmp/nginx_upload2/fps;
                upload_store_access user:rw group:rw all:rw;
                set $upload_field_name "file";
                upload_set_form_field "${upload_field_name}_name" $upload_file_name;
                upload_set_form_field "${upload_field_name}_content_type" $upload_content_type;
                upload_set_form_field "${upload_field_name}_path" $upload_tmp_path;
                upload_aggregate_form_field "${upload_field_name}_md5" $upload_file_md5;
                upload_aggregate_form_field "${upload_field_name}_size" $upload_file_size;
                upload_pass_form_field "^.*$";
                upload_limit_rate 0;
                upload_cleanup 400 404 499 500-505;
                upload_pass_args on;  
        }
        #location @python {
        #       proxy_pass http://frontends;
        #}
    }
